
public class RadixSort {

	final int MAX_VALUE = 30;
	int base = 2;	
	int maxDigits;
	
	public RadixSort() {
		//O numero maximo de bits sera log de MAX_VALUE na base k
		maxDigits = (int) (Math.log(this.MAX_VALUE)/Math.log(base)) + 1; 
	}

	public static void main(String[] args) {
		RadixSort ms = new RadixSort();
		int numbers[] = {1,4,7,4,2,-6,10,2,12,9,11,0,13,6,3,8,5};
		
		for (int i=0; i<numbers.length; i++) {
			int[] digits = ms.changeBase(numbers[i], base);
			
		
		}
		
		
		//numbers = ms.sort(numbers);
	}

	private int[] changeBase(int number, int base) {		
		int[] digits = new int[this.maxDigits];
				
		return digits;
	}
	
	
	

}
